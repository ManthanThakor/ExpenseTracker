@model ExpenseTrackerMvc.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="row login-box">
        <!-- Login Form -->
        <div class="col-md-6 col-12 login-form">
            <img src="~/assets/Logo/icon-l1g9rKqp.svg" alt="Expense Tracker Logo" class="mb-3 logo" width="100" height="100" />

            <h1 class="mb-4 text-center">
                <i class="fas fa-robot"></i> Welcome to Expense Tracker
                <br />
                Sign into your account
            </h1>

            <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Email Input -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input asp-for="Email" class="form-control" placeholder="Email address" required />
                </div>
                <span asp-validation-for="Email" class="text-danger error-message"></span>


                <!-- Password Input -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" required />
                </div>
                <span asp-validation-for="Password" class="text-danger error-message"></span>


                <!-- Forgot Password & Remember Me -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <a class="forgot-password" href="#">Forgot password?</a>
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                    </div>
                </div>

                <!-- Login Button -->
                <button class="btn btn-primary btn-block" type="submit">
                    <i class="fas fa-sign-in-alt"></i> Log In
                </button>
            </form>

            <!-- Register & Home Button -->
            <a class="register-link mt-3 d-block text-center" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">
                Don't have an account? Register
            </a>

            <a href="/" class="register-link mt-2 d-block text-center">
                <button class="btn btn-secondary btn-block mt-2">
                    <i class="fas fa-home"></i> Go back to Home
                </button>
            </a>
        </div>

        <!-- Robot Image Section -->
        <div class="col-md-6 col-12 login-image">
            <img src="~/imgs/login/cute-blue-robot-waving-hand-600nw-2056356791-removebg-preview.png"
                 alt="Robot Login Page" width="450" height="450" />
        </div>
    </div>
</div>

<script>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
            <script>
            $(document).ready(function () {
                $("form").on("submit", function () {
                    $(".text-danger").each(function () {
                        if ($(this).text().trim() !== "") {
                            $(this).parent(".input-group").addClass("error");
                        }
                    });
                });
            });
    </script>
    }
</script>

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
