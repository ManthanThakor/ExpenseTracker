@model ExpenseTrackerMvc.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
<div class="register-container">
    <div class="register-box">
        <div class="register-form-container">
            <div class="register-form">
                <div class="logo-container">
                    <img src="~/assets/Logo/icon-l1g9rKqp.svg" alt="Expense Tracker Logo" class="logo" />
                    <h1 class="brand-name">Expense<span>Tracker</span></h1>
                </div>
                <h2 class="welcome-text">
                    <i class="fas fa-user-plus"></i> Create Account
                </h2>
                <p class="subtext">Sign up to start your financial journey</p>
                <form asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="auth-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

                    <div class="form-group floating-label">
                        <div class="input-icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <input asp-for="Username" class="form-control" placeholder=" " required />
                        <label asp-for="Username">Username</label>
                        <span asp-validation-for="Username" class="text-danger error-message"></span>
                    </div>

                    <div class="form-group floating-label">
                        <div class="input-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <input asp-for="Email" class="form-control" placeholder=" " required />
                        <label asp-for="Email">Email Address</label>
                        <span asp-validation-for="Email" class="text-danger error-message"></span>
                    </div>

                    <div class="form-group floating-label">
                        <div class="input-icon">
                            <i class="fas fa-lock"></i>
                        </div>
                        <input asp-for="Password" class="form-control" placeholder=" " type="password" required />
                        <label asp-for="Password">Password</label>
                        <span asp-validation-for="Password" class="text-danger error-message"></span>
                    </div>

                    <div class="form-group floating-label">
                        <div class="input-icon">
                            <i class="fas fa-lock"></i>
                        </div>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder=" " type="password" required />
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger error-message"></span>
                    </div>

                    <button type="submit" class="btn-register">
                        <i class="fas fa-user-plus"></i> Sign Up
                    </button>

                    <div class="social-login">
                        <p class="divider">or sign up with</p>
                        <div class="social-buttons">
                            <button type="button" class="btn-social google">
                                <i class="fab fa-google"></i>
                            </button>
                            <button type="button" class="btn-social facebook">
                                <i class="fab fa-facebook-f"></i>
                            </button>
                            <button type="button" class="btn-social twitter">
                                <i class="fab fa-twitter"></i>
                            </button>
                        </div>
                    </div>

                    <div class="login-link">
                        Already have an account? <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Log in</a>
                    </div>
                </form>
            </div>
        </div>
        <!-- Right Side - Illustration -->
        <div class="register-illustration">
            <div class="illustration-container">
                <img src="~/imgs/login/cute-blue-robot-waving-hand-600nw-2056356791-removebg-preview.png"
                     alt="Friendly Robot" class="robot-image" />
                <div class="illustration-text">
                    <h3>Start Your Financial Journey</h3>
                    <p>Join thousands of users who track expenses, set budgets, and achieve their financial goals with our platform.</p>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function() {
            // Add floating label functionality
            $('.floating-label input').on('focus blur', function() {
                $(this).siblings('label').toggleClass('active', $(this).val() !== '' || $(this).is(':focus'));
            }).trigger('blur');

            // Add error class to parent when validation fails
            $("form").on("submit", function() {
                $(".text-danger").each(function() {
                    if ($(this).text().trim() !== "") {
                        $(this).closest(".form-group").addClass("has-error");
                    }
                });
            });
        });
    </script>
}