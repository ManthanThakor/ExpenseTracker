@model ExpenseTrackerMvc.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="register-container">
    <div class="row register-box">
        <!-- Registration Form -->
        <div class="col-md-6 col-12 register-form">
            <img src="~/assets/Logo/icon-l1g9rKqp.svg" alt="Expense Tracker Logo" class="mb-3 logo" width="100" height="100" />

            <h1 class="mb-4 text-center">
                <i class="fas fa-user-plus"></i> Join Expense Tracker
                <br />
                Create your account
            </h1>

            <form asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger error-message"></div>

                <!-- Username Input -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input asp-for="Username" class="form-control" placeholder="Username" required />
                </div>
                <span asp-validation-for="Username" class="text-danger error-message"></span>

                <!-- Email Input -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    </div>
                    <input asp-for="Email" class="form-control" placeholder="Email address" required />
                </div>
                <span asp-validation-for="Email" class="text-danger error-message"></span>


                <!-- Password Input -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" required />
                </div>
                <span asp-validation-for="Password" class="text-danger error-message"></span>


                <!-- Confirm Password Input -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" required />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger error-message"></span>


                <!-- Register Button -->
                <button class="btn btn-primary btn-block" type="submit">
                    <i class="fas fa-user-plus"></i> Register
                </button>
            </form>

            <!-- Login & Home Button -->
            <a class="login-link mt-3 d-block text-center" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
                Already have an account? Login
            </a>

            <a href="/" class="register-link mt-2 d-block text-center">
                <button class="btn btn-secondary btn-block mt-2">
                    <i class="fas fa-home"></i> Go back to Home
                </button>
            </a>
        </div>

        <!-- Robot Image Section -->
        <div class="col-md-6 col-12 register-image">
            <img src="~/imgs/login/cute-blue-robot-waving-hand-600nw-2056356791-removebg-preview.png"
                 alt="Robot Register Page" width="450" height="450" />
        </div>
    </div>

</div>
<script>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
            <script>
            $(document).ready(function () {
                $("form").on("submit", function () {
                    $(".text-danger").each(function () {
                        if ($(this).text().trim() !== "") {
                            $(this).parent(".input-group").addClass("error");
                        }
                    });
                });
            });
    </script>
    }
</script>


<link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
