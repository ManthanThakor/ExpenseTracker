                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-home"><i class="fas fa-home"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-car"><i class="fas fa-car"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-plane"><i class="fas fa-plane"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-bus"><i class="fas fa-bus"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-taxi"><i class="fas fa-taxi"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-train"><i class="fas fa-train"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-tshirt"><i class="fas fa-tshirt"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-shopping-bag"><i class="fas fa-shopping-bag"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-graduation-cap"><i class="fas fa-graduation-cap"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-book"><i class="fas fa-book"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-medkit"><i class="fas fa-medkit"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-pills"><i class="fas fa-pills"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-heartbeat"><i class="fas fa-heartbeat"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-dumbbell"><i class="fas fa-dumbbell"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-bowling-ball"><i class="fas fa-bowling-ball"></i></button>
