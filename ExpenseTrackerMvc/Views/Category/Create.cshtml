                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-briefcase"><i class="fas fa-briefcase"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-music"><i class="fas fa-music"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-film"><i class="fas fa-film"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-theater-masks"><i class="fas fa-theater-masks"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-coffee"><i class="fas fa-coffee"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-cocktail"><i class="fas fa-cocktail"></i></button>
