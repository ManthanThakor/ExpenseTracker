                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-university"><i class="fas fa-university"></i></button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .category-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
    }

    .icon-btn {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    .category-preview {
        background-color: #f8f9fa;
        transition: all 0.3s ease;
    }

    .sp-replacer {
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        padding: 5px;
        height: 38px;
    }

    .sp-preview {
        width: 24px;
        height: 24px;
        border: none;
    }

    .sp-dd {
        padding: 2px 0;
        height: 16px;
        line-height: 16px;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Initialize color picker
        $(".color-picker").spectrum({
            color: "@(string.IsNullOrEmpty(Model?.Color) ? "#007bff" : Model.Color)",
            showInput: true,
            preferredFormat: "hex",
            showPalette: true,
            palette: [
                ["#007bff", "#6610f2", "#6f42c1", "#e83e8c", "#dc3545"],
                ["#fd7e14", "#ffc107", "#28a745", "#20c997", "#17a2b8"],
                ["#6c757d", "#343a40", "#495057", "#868e96", "#adb5bd"]
            ],
            change: function (color) {
                updatePreview();
            }
        });

        // Update icon input and preview
        $("#Icon").on("input", function () {
            updatePreview();
        });

        // Update preview function
        function updatePreview() {
            const iconClass = $("#Icon").val() || "fas fa-tag";
            const color = $(".color-picker").spectrum("get").toHexString();

            // Update icon preview
            $("#iconPreview").html(`<i class="${iconClass}"></i>`);

            // Update category preview
            $("#previewIcon").css("background-color", color);
            $("#previewIcon").html(`<i class="${iconClass}"></i>`);
        }

        // Icon picker functionality
        $(".icon-btn").on("click", function () {
            const iconClass = $(this).data("icon");
            $("#Icon").val(iconClass);
            updatePreview();
            $("#iconPickerModal").modal("hide");
        });

        // Icon search
        $("#iconSearch").on("input", function () {
            const searchTerm = $(this).val().toLowerCase();
            $(".icon-btn").each(function () {
                const iconClass = $(this).data("icon").toLowerCase();
                if (iconClass.includes(searchTerm)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });
</script>
