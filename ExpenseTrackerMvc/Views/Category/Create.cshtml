                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-lightbulb"><i class="fas fa-lightbulb"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-gift"><i class="fas fa-gift"></i></button>
                        <button type="button" class="btn btn-outline-primary icon-btn" data-icon="fas fa-birthday-cake"><i class="fas fa-birthday-cake"></i></button>
