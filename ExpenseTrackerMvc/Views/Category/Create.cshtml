@model ExpenseTrackerMvc.Models.Category
@{
    ViewData["Title"] = Model?.Id > 0 ? "Edit Category" : "Create Category";
    var actionName = Model?.Id > 0 ? "Edit" : "Create";
}

<div class="container-fluid py-4">
    <!-- Animation Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/spectrum/1.8.1/spectrum.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/spectrum/1.8.1/spectrum.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card animate__animated animate__fadeInUp border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">@actionName Category</h3>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
                <div class="card-body">
                    <form asp-action="@actionName" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (Model?.Id > 0)
                        {
                                <input type="hidden" asp-for="Id" />
                        }

                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">Category Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                    <input asp-for="Name" class="form-control" placeholder="e.g., Groceries" required />
                                </div>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Type" class="form-label">Category Type</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-exchange-alt"></i></span>
                                    <select asp-for="Type" class="form-select" required>
                                        <option value="Expense">Expense</option>
                                        <option value="Income">Income</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Type" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Description" class="form-label">Description</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                                    <input asp-for="Description" class="form-control" placeholder="Brief description (optional)" />
                                </div>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Color" class="form-label">Color</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-palette"></i></span>
                                    <input asp-for="Color" type="text" class="form-control color-picker" />
                                </div>
                                <span asp-validation-for="Color" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Icon" class="form-label">Icon (FontAwesome class)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-icons"></i></span>
                                    <input asp-for="Icon" class="form-control" placeholder="e.g., fas fa-shopping-cart" />
                                    <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#iconPickerModal">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Icon" class="text-danger small"></span>
                                <div class="form-text">Preview: <span id="iconPreview"><i class="@(string.IsNullOrEmpty(Model?.Icon) ? "fas fa-tag" : Model.Icon)"></i></span></div>
                            </div>

                            <div class="col-12">
                                <div class="category-preview p-3 rounded-3 mb-3 text-center">
                                    <div class="category-icon mb-2 mx-auto" id="previewIcon" style="background-color: @(string.IsNullOrEmpty(Model?.Color) ? "#007bff" : Model.Color)">
                                        <i class="@(string.IsNullOrEmpty(Model?.Icon) ? "fas fa-tag" : Model.Icon)"></i>
                                    </div>
                                    <div class="small text-muted">Category Preview</div>
                                </div>
                            </div>

                            <div class="col-12 pt-3">
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i> @(Model?.Id > 0 ? "Update" : "Create")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Icon Picker Modal -->
    <div class="modal fade" id="iconPickerModal" tabindex="-1" aria-labelledby="iconPickerModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="iconPickerModalLabel">Choose an Icon</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
