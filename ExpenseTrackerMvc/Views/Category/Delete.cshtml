@* @model ExpenseTrackerMvc.Models.Category
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container-fluid py-4">
    <!-- Animation Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <div class="row">
        <div class="col-lg-6 col-md-8 mx-auto">
            <div class="card animate__animated animate__fadeInUp border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Delete Category</h3>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
                <div class="card-body">
                    <div class="mb-4 warning-animation text-center">
                        <div class="d-inline-block p-3 bg-danger rounded-circle mb-3 bg-opacity-10">
                            <i class="fas fa-exclamation-triangle fa-3x text-danger"></i>
                        </div>
                        <h4>Are you sure you want to delete this category?</h4>
                        <p class="text-muted">This action cannot be undone.</p>
                    </div>

                    <div class="category-details p-3 mb-4 rounded border">
                        <div class="row g-3 align-items-center">
                            <div class="col-auto">
                                <div class="category-icon" style="background-color: @Model.Color">
                                    @if (!string.IsNullOrEmpty(Model.Icon))
                                    {
                                        <i class="@Model.Icon"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-tag"></i>
                                    }
                                </div>
                            </div>
                            <div class="col">
                                <h5 class="mb-1">@Model.Name</h5>
                                <span class="badge @(Model.Type == "Income" ? "bg-success" : "bg-danger")">@Model.Type</span>
                                <p class="text-muted mb-0 mt-2">@(string.IsNullOrEmpty(Model.Description) ? "No description provided" : Model.Description)</p>
                            </div>
                        </div>
                    </div>

                    @if (Model.Expenses.Any())
                    {
                        <div class="alert alert-warning mb-4 animate__animated animate__pulse animate__infinite">
                            <div class="d-flex">
                                <div class="me-3">
                                    <i class="fas fa-exclamation-circle fa-2x"></i>
                                </div>
                                <div>
                                    <h5 class="alert-heading">Warning!</h5>
                                    <p>This category is used in @Model.Expenses.Count expense records. Deleting this category will remove the category reference from these expenses.</p>
                                </div>
                            </div>
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between pt-3">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="fas fa-times me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirmDelete(event)">
                                <i class="fas fa-trash me-1"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .category-icon {
        width: 48px;
        height: 48px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .warning-animation {
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.03);
        }
        100% {
            transform: scale(1);
        }
    }
</style>

<script>
    function confirmDelete(event) {
        if (!confirm("Are you sure you want to delete this category? This action cannot be undone.")) {
            event.preventDefault();
            return false;
        }
        return true;
    }
</script> *@