<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTrackerMvc</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpenseTrackerMvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-wallet"></i> <span>ExpenseTracker</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                <i class="fas fa-chart-line"></i> <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Transactions" asp-action="Index">
                                <i class="fas fa-exchange-alt"></i> <span>Transactions</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="organizeDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-layer-group"></i> <span>Organize</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Groups" asp-action="Index"><i class="fas fa-users"></i> Groups</a></li>
                                <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index"><i class="fas fa-tags"></i> Categories</a></li>
                                <li><a class="dropdown-item" asp-controller="Notebooks" asp-action="Index"><i class="fas fa-book"></i> Notebooks</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Account Section -->
                    <ul class="navbar-nav account-items">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Notification Bell -->
                            <li class="nav-item dropdown">
                                <a class="nav-link position-relative" href="#" id="notificationsDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-bell"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        3
                                    </span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-lg-start p-0" style="width: 320px;">
                                    <li class="dropdown-header bg-light py-2 px-3">
                                        <h6 class="m-0">Notifications (3)</h6>
                                    </li>
                                    <li class="dropdown-item p-3">
                                        <div class="d-flex align-items-start">
                                            <div class="me-2">
                                                <i class="fas fa-money-bill-wave text-success"></i>
                                            </div>
                                            <div>
                                                <small class="text-muted">5 min ago</small>
                                                <p class="mb-0">New expense added to "Vacation" group</p>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="dropdown-divider m-0"></li>
                                    <li class="dropdown-item p-3">
                                        <div class="d-flex align-items-start">
                                            <div class="me-2">
                                                <i class="fas fa-user-plus text-primary"></i>
                                            </div>
                                            <div>
                                                <small class="text-muted">2 hours ago</small>
                                                <p class="mb-0">John joined your "Family Budget" group</p>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="dropdown-divider m-0"></li>
                                    <li class="dropdown-item p-3">
                                        <div class="d-flex align-items-start">
                                            <div class="me-2">
                                                <i class="fas fa-book text-warning"></i>
                                            </div>
                                            <div>
                                                <small class="text-muted">Yesterday</small>
                                                <p class="mb-0">New notebook created: "Business Expenses"</p>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="dropdown-divider m-0"></li>
                                    <li class="dropdown-item text-center py-2">
                                        <a href="#" class="text-primary">View all notifications</a>
                                    </li>
                                </ul>
                            </li>

                            <!-- User Profile -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <div class="me-2 d-none d-lg-block">
                                        <div class="text-end">
                                            <div class="fw-semibold">@User.Identity.Name</div>
                                            <small class="text-muted">Premium Member</small>
                                        </div>
                                    </div>
                                    <div class="position-relative">
                                        <img src="https://ui-avatars.com/api/?name=@User.Identity.Name&background=4361ee&color=fff&rounded=true"
                                             class="rounded-circle" width="36" height="36" alt="Profile">
                                        <span class="position-absolute bottom-0 end-0 bg-success rounded-circle" style="width: 10px; height: 10px;"></span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user me-2"></i> Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Settings">
                                            <i class="fas fa-cog me-2"></i> Settings
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Billing" asp-action="Index">
                                            <i class="fas fa-credit-card me-2"></i> Billing
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-controller="Auth" asp-action="Logout">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> <span>Sign In</span>
                                </a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-primary" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i> <span>Register</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            @if (User.Identity.IsAuthenticated)
            {
                <div class="col-lg-2 col-md-3 d-none d-md-block sidebar p-0">
                    <nav class="sidebar-nav">
                        <ul class="sidebar-list list-unstyled">
                            <li class="sidebar-group">Dashboard</li>
                            <li>
                                <a class="sidebar-item" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-tachometer-alt"></i>
                                    <span>Overview</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidebar-item" asp-controller="Dashboard" asp-action="Reports">
                                    <i class="fas fa-chart-pie"></i>
                                    <span>Reports</span>
                                </a>
                            </li>

                            <li class="sidebar-group">Transactions</li>
                            <li>
                                <a class="sidebar-item" asp-controller="Transactions" asp-action="Index">
                                    <i class="fas fa-exchange-alt"></i>
                                    <span>All Transactions</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidebar-item" asp-controller="Transactions" asp-action="Create">
                                    <i class="fas fa-plus-circle"></i>
                                    <span>Add Transaction</span>
                                </a>
                            </li>

                            <li class="sidebar-group">Organize</li>
                            <li>
                                <a class="sidebar-item" asp-controller="Groups" asp-action="Index">
                                    <i class="fas fa-users"></i>
                                    <span>Groups</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidebar-item" asp-controller="Categories" asp-action="Index">
                                    <i class="fas fa-tags"></i>
                                    <span>Categories</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidebar-item" asp-controller="Notebooks" asp-action="Index">
                                    <i class="fas fa-book"></i>
                                    <span>Notebooks</span>
                                </a>
                            </li>

                            <li class="sidebar-group">Tools</li>
                            <li>
                                <a class="sidebar-item" asp-controller="Budget" asp-action="Index">
                                    <i class="fas fa-wallet"></i>
                                    <span>Budget Planner</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidebar-item" asp-controller="Goals" asp-action="Index">
                                    <i class="fas fa-bullseye"></i>
                                    <span>Savings Goals</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidebar-item" asp-controller="Recurring" asp-action="Index">
                                    <i class="fas fa-redo"></i>
                                    <span>Recurring</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }

            <!-- Main Content -->
            <main class="@(User.Identity.IsAuthenticated ? "col-lg-10 col-md-9 ms-sm-auto" : "col-12") main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="py-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    &copy; 2025 ExpenseTrackerMvc - <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="text-muted me-3"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-muted me-3"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="text-muted me-3"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-muted"><i class="fab fa-github"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>