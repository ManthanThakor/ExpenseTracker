<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTracker</title>
    <link rel="icon" type="image/svg+xml" href="~/assets/Logo/icon-l1g9rKqp.svg" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Slick Slider CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />


    <link rel="stylesheet" href="~/ExpenseTrackerMvc.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>

    <header>
        <nav class="navbar">
            <div class="logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/assets/Logo/icon-l1g9rKqp.svg" alt="Logo">
                </a>
            </div>

            <ul class="nav-links">
                <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a></li>
                <li><a asp-controller="Home" asp-action="Privacy"><i class="fas fa-user-shield"></i> Privacy</a></li>
                <li><a asp-controller="Category" asp-action="Index"><i class="fas fa-user-shield"></i> Category</a></li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Transaction" && ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")" href="@Url.Action("Dashboard", "Transaction")">
                        <i class="fas fa-chart-line me-1"></i> Dashboard
                    </a>
                </li>
                <li><a asp-controller="Transaction" asp-action="Index"><i class="fas fa-user-shield"></i> Transactions</a></li>

              

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="dropdown">
                        <a href="#"><i class="fas fa-bars"></i> More ▼</a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Account" asp-action="Profile"><i class="fas fa-user"></i> Profile</a></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link text-decoration-none">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </form>
                            </li>

                        </ul>
                    </li>
                }
                else
                {
                    <li><a asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                    <li><a asp-controller="Account" asp-action="Register"><i class="fas fa-user-plus"></i> Register</a></li>
                }
            </ul>

            <div class="burger" onclick="toggleMenu()">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </nav>
    </header>


    <div class="container-fluid">
        <main role="main" class="main-section-body">
            @RenderBody()
        </main>
    </div>


    <footer class="footer-section">
        <div class="footer-wave">
            <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
                <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="#4d96ff"></path>
                <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" fill="#4d96ff"></path>
                <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" fill="#4d96ff"></path>
            </svg>
        </div>

        <div class="container">
            <div class="footer-content">
                <div class="footer-column">
                    <div class="footer-logo">
                        <img src="~/assets/Logo/icon-l1g9rKqp.svg" alt="ExpenseTracker Logo">
                        <span>ExpenseTracker</span>
                    </div>
                    <p class="footer-description">
                        Take control of your finances with our intuitive expense tracking solution.
                        Designed to help you save money and achieve your financial goals.
                    </p>
                    <div class="social-links">
                        <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <div class="footer-column">
                    <h3 class="footer-title">Quick Links</h3>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-chevron-right"></i> Home</a></li>
                        <li><a asp-controller="Category" asp-action="Index"><i class="fas fa-chevron-right"></i> Categories</a></li>
                        <li><a asp-controller="Transaction" asp-action="Index"><i class="fas fa-chevron-right"></i> Transactions</a></li>
                        <li><a asp-controller="Transaction" asp-action="Dashboard"><i class="fas fa-chevron-right"></i> Dashboard</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy"><i class="fas fa-chevron-right"></i> Privacy Policy</a></li>
                    </ul>
                </div>

                <div class="footer-column">
                    <h3 class="footer-title">Contact Us</h3>
                    <ul class="contact-info">
                        <li><i class="fas fa-map-marker-alt"></i> 123 Finance Street, Money City, MC 12345</li>
                        <li><i class="fas fa-phone-alt"></i> +1 (555) 123-4567</li>
                        <li><i class="fas fa-envelope"></i> support@expensetracker.com</li>
                    </ul>

                    <form class="newsletter-form">
                        <h4>Subscribe to Newsletter</h4>
                        <div class="input-group-sec-footer">
                            <input type="email" placeholder="Your email address" required>
                            <button type="submit"><i class="fas fa-paper-plane"></i></button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="footer-bottom">
                <div class="copyright">
                    &copy; @DateTime.Now.Year ExpenseTracker. All rights reserved.
                </div>
                <div class="footer-legal">
                    <a href="#">Terms of Service</a>
                    <a href="#">Privacy Policy</a>
                    <a href="#">Cookie Policy</a>
                </div>
            </div>
        </div>
    </footer>
    <!-- ✅ Load jQuery First -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- ✅ Ensure jQuery is globally accessible -->
    <script>
        window.$ = window.jQuery = jQuery;
    </script>

    <!-- ✅ Load Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Slick Slider JS -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>


    <!-- ✅ Your site.js file -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
