<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTrackerMvc</title>
    <link rel="icon" type="image/svg+xml" href="~/assets/Logo/icon-l1g9rKqp.svg" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/ExpenseTrackerMvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">

                <a href="#"> <img src="~/assets/Logo/icon-l1g9rKqp.svg" alt="Logo"></a>
            </div>
            <ul class="nav-links">
                <li><a href="/"><i class="fas fa-home"></i> Home</a></li>
                <li><a href="/privacy"><i class="fas fa-user-shield"></i> Privacy</a></li>
                <li class="dropdown">
                    <a href="#"><i class="fas fa-bars"></i> More ▼</a>
                    <ul class="dropdown-menu">
                        <li><a href="/account/profile"><i class="fas fa-user"></i> Profile</a></li>
                        <li><a href="/account/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                    </ul>
                </li>
            </ul>
            <div class="burger" onclick="toggleMenu()">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </nav>
    </header>


    <div class="mt-5" id="Margin-sec">
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ExpenseTrackerMvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- ✅ Load jQuery First -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- ✅ Ensure jQuery is globally accessible -->
    <script>
        window.$ = window.jQuery = jQuery;
    </script>

    <!-- ✅ Load Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ Load Spectrum AFTER jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/spectrum/1.8.1/spectrum.min.js"></script>

    <!-- ✅ Debugging -->
    <script>
        $(document).ready(function () {
            if (typeof jQuery === 'undefined') {
                console.error("❌ jQuery is not loaded!");
            } else {
                console.log("✅ jQuery is loaded!");
            }

            if (typeof $.fn.spectrum === 'undefined') {
                console.error("❌ Spectrum is not loaded correctly!");
            } else {
                console.log("✅ Spectrum is loaded!");
            }
        });
    </script>

    <!-- ✅ Your site.js file -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
