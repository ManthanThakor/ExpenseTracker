@model ExpenseTrackerMvc.ViewModels.CategoryDeleteViewModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="py-5 container" style="margin-top:100px;">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="my-0">
                        <i class="fas fa-exclamation-triangle me-2"></i> Delete Category
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4 text-center">
                        <i class="fas fa-trash-alt text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Are you sure you want to delete this category?</h5>
                    </div>

                    <div class="alert alert-warning">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-info-circle me-2 fs-5"></i>
                            <div>
                                @if (Model.TransactionCount > 0)
                                {
                                    <p class="mb-0">
                                        <strong>Warning:</strong> This category is linked to @Model.TransactionCount
                                        Transaction record(s). Deleting this category may affect your expense tracking.
                                    </p>
                                }
                                else
                                {
                                    <p class="mb-0">
                                        This category has no linked Transaction and can be safely deleted.
                                    </p>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-3 text-muted">Category Details</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Name</dt>
                                <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                                <dt class="col-sm-4">Type</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @(Model.Type == "Expense" ? "bg-danger" : "bg-success")">
                                        @Model.Type
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Transaction</dt>
                                <dd class="col-sm-8">@Model.TransactionCount</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-1"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>